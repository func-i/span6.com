

<div class="header page">
  <h1>Signup</h1>
</div>

<div id="signup" class="padding">

  <div class="left">

    <% form_for @signup do |f| %>
      <h2><span>Contact Info</span></h2>

      <p>
        <label>First Name</label>
        <%= f.text_field :first_name, :class => "text_field required" %>
      </p>

      <p>
        <label>Last Name</label>
        <%= f.text_field :last_name, :class => "text_field required" %>
      </p>

      <p>
        <label>E-mail Address</label>
        <%= f.text_field :email, :class => "text_field required email" %>
      </p>

      <p>
        <label>Phone Number</label>
        <%= f.text_field :phone_number, :class => "text_field" %>
      </p>


      <div class="clear margin"></div>

      <h2><span>Account Info</span></h2>

      <p>
        <label>Company</label>
        <%= f.text_field :company, :class => "text_field required" %>
      </p>

      <p>
        <label>Subdomain</label>
        <%= f.text_field :subdomain, :class => "text_field" %>
        <b>.osamm.com</b>
      </p>

      <div class="clear"></div>

      <div class="send_form">
        <a href="javascript:;" class="button submit"><span>Complete Signup</span></a>
        <span class="trial">No obligations. We will contact you to setup a demo.</span>
      </div>
    <% end %>

  </div>

  <div class="right">
    <div class="sidebar_box">
      <h4>Signup Instructions</h4>
      <p>
        Please fill out the form so that our technical experts can contact you for a Demo.
        We will attempt to contact you by phone and if unsuccessful or not provided, then by email.
      </p>
    </div>

    <div class="sidebar_box">
      <h4>Compatible Browsers</h4>
      <ul>
        <li>Firefox 3 or later</li>
        <li>Safari 4 or later</li>
        <li>Chrome 6 or later</li>
        <li>Opera 10 or later</li>
      </ul>
    </div>

    <div class="sidebar_box">
      <h4>Contact Us</h4>
      <p>Still have questions? <a href="/contact">Contact us</a>.</p>
    </div>
  </div>
  <div class="clear"></div>

</div>
